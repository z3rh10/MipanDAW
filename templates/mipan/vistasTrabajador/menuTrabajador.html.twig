{% extends 'mipan/layout5.html.twig' %}

{% block contenido %}


<div class="container" style="width:100%, height:100%; background-color: black;">
	<h2 style="color: white;">Tabla de Productos</h2>
</div>
<br>
<div class="pl-5">
	{{ "now"|date("Y-m-d") }}
	<h3>{{ mensaje }}</h3>
	<div class="row">
		<div class="col-sm-6">	
			<a href="/cerrarSesion" class="btn btn-danger">Cerrar sesión</a>
			<br>
		</div>
	</div>
</div>
<br><br>
<div class="container">
	<section class="p-0 mb-5">
		<div class="container-fluid p-0">
			
			<div class="row">
				{% for producto in productos %}
				{% if producto.panaderia ==  app.session.get('Panaderia') %}



				<br>
				<div class="col-sm-4">


					<div class="card mb-3">
						<div class="row no-gutters p-2">
							<div class="">
								<img class="img-fluid " src="/img/productos/{{ producto.imagen }}" alt="" style="height: 195px;">
								<h3 class="titles-clie pt-2 text-center">{{ producto.nombre }}</h3>
							</div>
							<div class="">
								<div class="card-body">
									<u><b><p class="text-center">Información del Producto</p></b></u>
									<p class="card-text">
										
										<p class="text-center" style="color:black;">
											<b>{{ producto.descripcion }}</b>
										</p>
										<br>
										<h3 class="titles-clie text-right"> {{ producto.precio }} €/u</h3>
									</p>
									<!-- <p class="card-text">
										<small class="text-muted">Last updated 3 mins ago</small>
									</p> -->
								</div>
							</div>
						</div>
					</div>


				</div>


				<br>
				<hr>


				{% endif %}
				{% endfor %}
			</div>
			
		</div>
	</section>

</div>

{% endblock %}
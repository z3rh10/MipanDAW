{% extends 'mipan/inicioJefes.html.twig' %}

{% block gestion %}


<!-- <META HTTP-EQUIV="REFRESH" CONTENT="5;URL= "> -->

{% if app.session.get('Conectado') %}

<h2>Editar Empleado/a</h2>

<a style="color:red;" href="#" id="bt_delete" data-toggle="modal" data-target="#infoBorrar">

	<b>[Click para eliminar] 
		<i class="fas fa-trash">
		</i>
	</b>
</a>
<br>

<!-- Modal2 -->
<div class="modal fade" id="infoBorrar" tabindex="-1" role="dialog" aria-labelledby="infoBorrar" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">



		<div class="modal-content">

			<form action="{{ path('app_mipan_borrarEmpleadoAdmin', {'dni': empleado.dni}) }}" method="POST" id="formBorradoEmpleado" name="formBorradoEmpleado">

				<div class="modal-header">
					<h3 class="modal-title titles-clie">Confirmar Borrado 
						<i class="fas fa-trash">
						</i>
					</h3>
				</div>
				<div class="modal-body">

					<h4>El/La Empleado/a : <u>{{ empleado.nombre }} {{ empleado.apellidos }}</u>, será eliminado/a definitivamente.</h4>
					<h4>¿Desea continuar con ésta operación?</h4>

				</div>
				<div class="modal-footer">

					<button type="button" class="btn btn-danger" data-dismiss="modal" id="cancelarBorrar" value="">Cancelar</button>

					<button type="button" class="btn btn-primary" id="confirmarBorradoEmpleado" name="confirmarBorradoEmpleado">
						Confirmar
					</button>

				</div>

			</form>
		</div>

	</div>
</div>


<br><br>
<h3 style="color:red;" class="text-right">{{mensaje}}</h3>



<form name="formEditar" action="" method="POST">
	<table>

		<tr>
			<td>Panaderia</td>
			<td><input type="text" name="panaderia" value="{{ empleado.panaderia }}" required readonly /></td> 
		</tr>
		<tr>
			<td>DNI</td>
			<td><input type="text" name="dni" value="{{ empleado.dni }}" required /></td>
		</tr>
		<tr>
			<td>Nombre</td>
			<td><input type="text" name="nombre" value="{{ empleado.nombre }}" required /></td>
		</tr>
		<tr>            
			<td>Apellidos</td>
			<td><input type="text" name="apellidos" value="{{ empleado.apellidos }}" required /></td> 
		</tr>
		<tr>
			<td>Email</td>
			<td><input type="email" name="email" value="{{ empleado.email }}" required /></td>
		</tr>
		<tr>
			<td>Telefono</td>
			<td><input type="number" name="telefono" value="{{ empleado.telefono }}" required /></td>
		</tr>

		<tr>
			<td>Usuario</td>
			<td><input type="text" name="usuario" value="{{ empleado.usuario }}" required /></td>
		</tr>
		<tr>
			<td>Contraseña</td>
			<td><input type="text" name="pass" value="{{ empleado.pass }}" required /></td>
		</tr>
		<tr>
			<td>ESPECIALIDAD</td>

			<td>
				<select id="tipo" name="especialidad" required>
					<option value="{{ empleado.especialidad }}">-{{ empleado.especialidad }}-</option>
					<br>
					<option value="MAESTRO_DE_PALA">MAESTRO DE PALA</option>
					<option value="OFICIAL_DE_MESA">OFICIAL DE MESA</option>
					<option value="OFICIAL_DE_MASA">OFICIAL DE MASA</option>
					<option value="AYUDANTE">AYUDANTE</option>
					<option value="APRENDIZ">APRENDIZ</option>
					<option value="DEPENDIENTE">DEPENDIENTE</option>
					<option value="REPARTIDOR">REPARTIDOR</option>
				</select>
			</td>
		</tr>
	</table>
	<br>
	<input type="submit" value="Editar" name="editar" />
</form>

{% else %}

<br><br>
<h1 style="color:red">Acceso Denegado a la función: 'Editar'</h1>

{% endif %}



{% endblock %}

